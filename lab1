#include <iostream>
#include <cmath>
using namespace std;


int main(){
    float a, b, c, p;
    cin >> a >> b >> c;
    p = (a + b + c) / 2;
    c = sqrt(p * (p - a) * (p - b) * (p - c));
    cout << c;
    return 0;
}








